<div class="flex-container">
    <div class="pageBanner">
        <h1 class="pageLocation">Dashboard // <span class="playlists">Playlists</span></h1>
        {{#if logged_in}}
        <span class="ifSignedIn">- {{user.name}}</span>
        {{else}}
        <span class="ifSignedIn">- Not Signed In</span>
        {{/if}}
    </div>
    <div class="flexCont">
        <div class="dashboardLeft">
            <div class="dashboardLeftTop">
                <div class="recentPlaylist">
                    <h1 class="borderBottom savedLists savedListsText">Your Saved Playlists | <span class="numOf">{{playlists.length}} Playlist(s)</span></h1>
                        <div class="savedLists pLs">
                            {{#each playlists as |playlist index|}}
                            <div class="listItem playListItem" id="{{index}}" data-track="{{stringify_object playlist.track_list}}"><span class="index">{{index}}</span>) <span class="playListName">{{playlist.name}}</span> | <span class="genreDuration"><span class="listofGenre">{{playlist.genre}}</span> - <span class="durationMS">{{playlist.realDuration}}</span></span> | <span class="numOf">{{playlist.track_list.length}} Track(s)</span></div>
                            {{/each}}
                        </div> 
                </div>
                <div class="dashboardLeftBottom">
                </div>
            </div>
        </div>
        <div class="dashboardRight">
            <div class="currentPlaylist">
                <div class="title-duration-genre">
                    <h1 class="playlist-name borderBottom">Current Playlist</h1>
                    <h2><span class="nameOfList">Playlist: </span><span class="genreList">Genre - </span><span class="durationList">10 min.</span></h2>
                </div>
                <div class="playListTracks default">
                    <div class="track">1. Track Name</div>
                    <div class="track">2. Track Name</div>
                    <div class="track">3. Track Name</div>
                </div>
                {{#each playlists as |playlist index|}}
                <div class="track-list PLTrackList{{index}}" id="trackList{{index}}">
                {{#each playlist.track_list as |track index|}}
                    <iframe src="https://open.spotify.com/embed/track/{{track.id}}" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                    <div class="track divstItem" id="{{track.id}}"><span class="index">{{index}}</span><span class="greenSep">)</span> {{track.name}} <span class="greenSep">-</span> {{track.artist}} <span class="greenSep">|</span> <span class="trackDuration">{{track.duration}}</span></li></div>
                {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
</div>
<div class="buttonContainer">
    <button class="generateButton">Generate New Playlist</button>
</div>

    <div class="promptForm" id="promptForm">
        <div class="formHeader"><h1><div class="hinner">Generate New Playlist Form</div> <span class="closeBtn">X</span></h1></div>
        <form action="" class="playlistPromptForm">
            <h2>Title of the New Playlist</h2>
            <input name="playlistTitle" class="playlistTitle" type="text" placeholder="Title of the New Playlist">
            <h2>Duration of the New Playlist</h2>
            <input name="playlistDuration" class="playlistDuration" type="text" placeholder="Duration of the New Playlist... Please enter a number between 10 - 120 minutes">
            <h2>Genre to Sample</h2>
            <select class="genres" data-placeholder="Choose a Genre...">
                <option value="Choose">Choose a Genre...</option>
                <option value="Random">Random</option>
                <option value="Rap">Rap</option>
                <option value="Pop">Pop</option>
                {{!-- <option value="Rock">Rock</option> --}}
                <option value="R&B">R&B</option>
                <option value="Country">Country</option>
            </select>
            <button class="submitBtn" type="submit">Generate Playlist</button>
        </form>
        <div class="userPlaylist">
            {{!-- Custom User Playlist will go here --}}
        </div>
        <div class="buttonsRow">
            <button id="save"><i class="fas fa-save"></i> Save this Playlist</button>
            <button id="generateNew"><i class="fas fa-undo"></i> Generate New Playlist</button>
        </div>
    </div>
</div>
