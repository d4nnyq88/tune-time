<div class="flex-container">
    <div class="pageBanner">
        <h1 class="pageLocation">Dashboard // <span class="playlists">Playlists</span></h1>
        {{#if logged_in}}
        <span class="ifSignedIn">- {{user.name}}</span>
        {{else}}
        <span class="ifSignedIn">- Not Signed In</span>
        {{/if}}
    </div>
    <div class="flexCont">
        <div class="recentPlaylist">
            <h1 class="borderBottom">Your Saved Playlists</h1>
                <div class="savedLists">
                    {{#each playlists as |playlist index|}}
                    <div class="listItem {{index}}" id="{{playlist.id}}"><span class="index">{{index}}</span>) {{playlist.name}} | <span class="genreDuration">{{playlist.genre}} - <span class="durationMS">{{playlist.realDuration}}</span></span></div>
                    {{/each}}
                </div> 
        </div>
    <div class="currentPlaylist">
        <div class="title-duration-genre">
            <h1 class="playlist-name borderBottom">Walk The Dog</h1>
            <h2 class="duration">10min</h2>
            <h2 class="genre">Hip-Hop</h2>
        </div>
        <ol class="track-list">
            <li>Lil Wayne- She Will ft.Drake</li>
            <li>J.cole- Pride is The Devil ft.Lil Baby</li>
            <li>Dababy- BOP</li>
            <li>lil Baby- sum 2 Prove</li>
        </ol>
    </div>
</div>
<div class="buttonContainer">
    <button class="generateButton">Generate New Playlist</button>
</div>

    <div class="promptForm" id="promptForm">
        <div class="formHeader"><h1><div class="hinner">Generate New Playlist Form</div> <span class="closeBtn">X</span></h1></div>
        <form action="" class="playlistPromptForm">
            <h2>Title of the New Playlist</h2>
            <input name="playlistTitle" class="playlistTitle" type="text" placeholder="Title of the New Playlist">
            <h2>Duration of the New Playlist</h2>
            <input name="playlistDuration" class="playlistDuration" type="text" placeholder="Duration of the New Playlist... Please enter a number between 10 - 120 minutes">
            <h2>Genre to Sample</h2>
            <select class="genres" data-placeholder="Choose a Genre...">
                <option value="Choose">Choose a Genre...</option>
                <option value="Random">Random</option>
                <option value="Rap">Rap</option>
                <option value="Pop">Pop</option>
                {{!-- <option value="Rock">Rock</option> --}}
                <option value="R&B">R&B</option>
                <option value="Country">Country</option>
            </select>
            <button class="submitBtn" type="submit">Generate Playlist</button>
        </form>
        <div class="userPlaylist">
            {{!-- Custom User Playlist will go here --}}
        </div>
        <div class="buttonsRow">
            <button id="save"><i class="fas fa-save"></i> Save this Playlist</button>
            <button id="generateNew"><i class="fas fa-undo"></i> Generate New Playlist</button>
        </div>
    </div>

</div>
