<div class="flex-container">
    {{> header}}
    <div class="flexCont dashB">
        <div class="dashboardLeft">
            <div class="dashboardLeftTop">
                <div class="recentPlaylist">
                    <h1 class="borderBottom savedLists savedListsText playlistItem">Your Saved Playlists <span class="numOf"> | {{playlists.length}} Playlist(s)</span></h1>
                        <div class="savedLists pLs">
                            {{#each playlists as |playlist index|}}
                            <div class="listItem playListItem" id="{{index}}" data-trackList="{{stringify_object playlist.track_list}}"><span class="playListIndex"><span class="index">{{index}}</span><span class="greenSep">)</span></span> <span class="playListName">{{playlist.name}}</span> <span class="genreDuration"> <span class="listofGenre"> | {{playlist.genre}}</span> - <span class="durationMS">{{playlist.realDuration}}</span></span> <span class="numOf"> <span class="greenSep">|</span> {{playlist.track_list.length}} Track(s)</span></div>
                            {{/each}}
                        </div> 
                </div>
                <div class="dashboardLeftBottom">
                </div>
            </div>
        </div>
        <div class="dashboardRight">
            <div class="currentPlaylist dashBCurrent">
                <div class="title-duration-genre">
                    <h1 class="playlist-name borderBottom">Current Playlist</h1>
                    <h2><span class="nameOfList">Playlist<span class="greenSep">:</span> </span><span class="genreList">Genre <span class="greenSep">-</span> </span><span class="durationList">10 min.</span> <span class="greenSep">|</span> <span class="trackNum"># of Tracks</span></h2>
                </div>
                <div class="playListTracks default">
                    <div class="track"><span class="greenSep">1.</span> Track Name</div>
                    <div class="track"><span class="greenSep">2.</span> Track Name</div>
                    <div class="track"><span class="greenSep">3.</span> Track Name</div>
                </div>
                {{#each playlists as |playlist index|}}
                <div class="track-list PLTrackList{{index}}" id="{{playlist.genre}}" data-trackID="{{track.id}}">
                {{#each playlist.track_list as |track index|}}
                <div class="trackElem" id="{{playlist.genre}}" data-trackID="{{track.id}}">
                    {{!-- <iframe id="{{playlist.genre}}" data-trackID="{{track.id}}" src="https://open.spotify.com/embed/track/{{track.id}}" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe> --}}
                    <div class="track divstItem" id="{{playlist.genre}}" data-trackID="{{track.id}}">
                        <span class="index" id="{{playlist.genre}}" data-trackID="{{track.id}}">{{index}}</span>
                        <span class="greenSep" id="{{playlist.genre}}" data-trackID="{{track.id}}">)</span> 
                        <a href="{{track.external_urls.spotify}}" class="trackHref trackLink" target="_blank" id="{{playlist.genre}}" data-trackID="{{track.id}}">{{track.name}}</a>
                        <span class="greenSep" id="{{playlist.genre}}" data-trackID="{{track.id}}">-</span> {{track.artist}} 
                        <span class="greenSep" id="{{playlist.genre}}" data-trackID="{{track.id}}">|</span> 
                        <span class="trackDuration" id="{{playlist.genre}}" data-trackID="{{track.id}}" data-duration="{{track.duration}}">{{track.duration}}</span>
                    </div>
                </div>
                {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
   {{> generateButton}}

    {{> playlistGenerateForm}}
</div>
